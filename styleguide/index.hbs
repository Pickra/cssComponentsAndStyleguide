<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8">
  <title>{{options.title}}</title>

  <meta name="description" content="">
  <meta name="generator" content="kss-node">
  <meta name="viewport" content="width=device-width">

  {{{styles}}}
</head>
  <body class="layout kss-style">
    <header class="layout__header">{{options.title}}</header>

    <nav class="layout__nav">
      <ul class="layout__nav-menu">
      <li class="layout__nav-item">
        <a class="layout__nav-link" href="./index.html">
          <span class="kss-nav__name">
            <span class="kss-nav__ref">0</span>
            Overview
          </span>
        </a>
      </li>
      {{#each menu}}
        <li class="layout__nav-item">
          <a
            class="layout__nav-link {{#if isActive}} kss-nav-link--active{{/if}}"
            href="section-{{referenceURI}}.html"
          >
            <span class="kss-nav__name">
              <span class="kss-nav__ref">{{referenceNumber}}</span>
              {{header}}
            </span>
          </a>
          {{#if isActive}}
            {{#if children}}
              <ul class="kss-nav__menu-child layout__nav-menu">
              {{#each children}}
                <li class="layout__nav-item">
                  <a
                    class="layout__nav-link"
                    href="section-{{../referenceURI}}.html#kssref-{{referenceURI}}"
                  ><span class="kss-nav__name">{{header}}</span></a>
                </li>
              {{/each}}
              </ul>
            {{/if}}
          {{/if}}
        </li>
      {{/each}}
      </ul>
    </nav>

    <main class="layout__main"></main>
    <footer class="layout__footer">footer</footer>
  </body>
</html>
