{
  "name": "css-components-and-styleguide",
  "version": "0.0.1",
  "description": "A CSS library and styleguide using SASS, BEM AND Flexbox",
  "main": "build/bundle.js",
  "scripts": {
    "styleguide": "npm run build && open ./styleguide/html/index.html",
    "build": "npm run webpack && npm run build:kss",
    "build:kss": "npm run kss -- -c ./kss-config.json",
    "prebuild": "rm -rf ./build && rm -rf ./styleguide/html",
    "kss": "kss",
    "webpack": "webpack",
    "watch": "npm run build:kss && npm run webpack --watch"
  },
  "author": "Ari Picker",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "7.2.5",
    "css-loader": "0.28.9",
    "extract-text-webpack-plugin": "3.0.2",
    "kss": "3.0.0-beta.18",
    "node-sass": "4.7.2",
    "postcss-loader": "2.1.0",
    "sass-loader": "6.0.6",
    "style-loader": "0.20.1",
    "svg-sprite-loader": "3.6.2",
    "svgo-loader": "2.1.0",
    "webpack": "3.10.0"
  },
  "dependencies": {
    "modularscale-sass": "3.0.5",
    "node-normalize-scss": "3.0.0",
    "svgo": "1.0.4"
  }
}
